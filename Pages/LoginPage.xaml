<UserControl x:Class="AnonymDesktopClient.Core.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:local="clr-namespace:AnonymDesktopClient.Core"
      mc:Ignorable="d"
      Height="250" Width="250"
      MinHeight="250" MinWidth="250">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="12" Width="12*"/>
            <ColumnDefinition MinWidth="113" Width="113*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" Height="50*" />
            <RowDefinition MinHeight="100" Height="150*"/>
            <RowDefinition MinHeight="50" Height="50*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="lblErrorMessage" VerticalAlignment="Bottom" Foreground="Red" HorizontalAlignment="Center" Margin="0,0,0,5"></Label>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="12" Width="12*"/>
                    <ColumnDefinition MinWidth="113" Width="113*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconModern Grid.Column="0" Name="IconLogin" Kind="User" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <TextBox 
                    Controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=Login}"
                    Controls:TextBoxHelper.SelectAllOnFocus="True"
                    Style="{DynamicResource MahApps.Styles.TextBox}"
                    Grid.Column="0" Grid.ColumnSpan="2"
                    Name="txtLogin" MinWidth="200" MinHeight="25" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="5 5 5 5"
                    TextChanged="txtLogin_TextChanged" KeyUp="txtLogin_KeyUp"></TextBox>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="12" Width="12*"/>
                    <ColumnDefinition MinWidth="113" Width="113*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconModern Grid.Column="0" Name="IconPassword" Kind="Key" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <PasswordBox
                    Controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=Password}"
                    Controls:TextBoxHelper.SelectAllOnFocus="True"
                    Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}"
                    Grid.Column="0" Grid.ColumnSpan="2"
                    Name="txtPassword" MinWidth="200" MinHeight="25" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5 0 5 2"
                    PasswordChanged="txtPassword_PasswordChanged" KeyUp="txtPassword_KeyUp"></PasswordBox>
            </Grid>
            <CheckBox
                Style="{StaticResource MahApps.Styles.CheckBox.Win10}"
                Name="chkRememberMe" MinWidth="100" MinHeight="15" FontSize="11"
                VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5 0 5 5" Content="{DynamicResource ResourceKey=RememberMe}"/>
            <Button Name="btnGoToRegister"
                    MinHeight="30" FontSize="10"
                    Style="{StaticResource MahApps.Styles.Button.Square}" Click="btnGoToRegister_Click" Margin="40 2 40 2">
                <TextBlock Text="{DynamicResource ResourceKey=RegisterProposeTitle}"
                           MinHeight="10" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center"
                           TextAlignment="Center" TextWrapping="Wrap"/>
            </Button>
        </StackPanel>
        <Button Name="btnLogin" Content="{DynamicResource ResourceKey=SignIn}"
                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" FontSize="17"
                Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" Click="btnLogin_Click" Margin="25 8 25 8"/>
    </Grid>
</UserControl>
