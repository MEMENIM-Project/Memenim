<Page x:Class="AnonymDesktopClient.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnonymDesktopClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Name="lblStatus" VerticalAlignment="Bottom" Foreground="Red" HorizontalAlignment="Center"></Label>
            <TextBox Name="txtLogin" Grid.Row="1" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Center">login</TextBox>
        <StackPanel Grid.Row="2">
            <PasswordBox Name="txtPass"  Width="200" VerticalAlignment="Top" HorizontalAlignment="Center"></PasswordBox>
            <Button Name="btnRegister" Click="btnRegister_Click" Width="200" Height="30" Margin="5 5 5 5">New User? Create an account</Button>
        </StackPanel>
        <Button Name="btnLogin" Grid.Row="3" ButtonBase.Click="btnLogin_Click" Margin="150 20 150 40">Proceed</Button>
    </Grid>
</Page>
