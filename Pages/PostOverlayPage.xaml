<local:PageContent x:Class="Memenim.Pages.PostOverlayPage"
                   d:DataContext="{d:DesignInstance viewModel:PostOverlayViewModel}"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:Memenim.Pages"
                   xmlns:viewModel="clr-namespace:Memenim.Pages.ViewModel"
                   xmlns:widgets="clr-namespace:Memenim.Widgets"
                   mc:Ignorable="d"
                   d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ScrollViewer x:Name="svPost" VerticalScrollBarVisibility="Auto"
                      ScrollChanged="SvPost_ScrollChanged">
            <StackPanel>
                <widgets:PostWidget CurrentPostData="{Binding Path=DataContext.CurrentPostData, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PostOverlayPage}}"/>
                <widgets:CommentsList PostId="{Binding Path=DataContext.CurrentPostData.id, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PostOverlayPage}}"
                                      CommentsCount="{Binding Path=DataContext.CurrentPostData.comments.count, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PostOverlayPage}}"/>
                <widgets:WriteComment x:Name="wdgUserComment"
                                      PostId="{Binding Path=DataContext.CurrentPostData.id, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PostOverlayPage}}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</local:PageContent>
